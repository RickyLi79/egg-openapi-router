{
  "name": "egg-openapi-router",
  "version": "1.0.0",
  "description": "",
  "egg": {
    "typescript": true,
    "declarations": true
  },
  "eggPlugin": {
    "name": "openapiRouter"
  },
  "typings": "typings",
  "keywords": [
    "egg",
    "eggPlugin",
    "egg-plugin",
    "openapi",
    "route",
    "valid",
    "schema"
  ],
  "scripts": {
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test-local": "egg-bin test",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov",
    "build": "ets -o typings/index.d.ts && tsc -p tsconfig.build.json",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "eslint . --ext .ts",
    "clean": "ets clean",
    "ets": "ets -o typings/index.d.ts -w",
    "allure": "npm run allure:test && npm run allure:report",
    "allure:clean": "rimraf ./allure-results",
    "allure:debug": " egg-bin test test/debug.ts",
    "allure:report": "allure generate allure-results --clean -o allure-report && allure open -h localhost -p 5501 allure-report",
    "allure:test": "npm run allure:clean && egg-bin test test/**/*.allure.ts"
  },
  "dependencies": {
    "@rickyli79/koa-openapi-router": "^1.1.4",
    "egg": "^2.29.1"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "@types/supertest": "^2.0.0",
    "egg-bin": "^4.15.0",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.16.0",
    "eslint": "^6.7.2",
    "eslint-config-egg": "^8.0.0",
    "mocha": "^8.3.0",
    "mocha-multi-reporters": "^1.5.1",
    "rimraf": "^3.0.2",
    "supertest-allure-step-helper": "^0.2.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "ci": {
    "version": "8"
  },
  "eslintIgnore": [
    "coverage"
  ],
  "author": {
    "email": "382688672@qq.com",
    "name": "RickyLi79",
    "url": "https://github.com/RickyLi79"
  },
  "license": "MIT",
  "homepage": "https://github.com/RickyLi79/egg-openapi-router",
  "repository": {
    "type": "git",
    "url": "https://github.com/RickyLi79/egg-openapi-router.git"
  }
}
